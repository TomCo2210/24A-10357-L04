<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimerActivity1">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/time_FAB_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/green_300"
        android:layout_margin="@dimen/fab_margins"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="START"
        app:icon="@drawable/play" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/time_FAB_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red_300"
        android:layout_margin="@dimen/fab_margins"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="STOP"
        app:iconGravity="end"
        app:icon="@drawable/stop" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/timer_LBL_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="00:00:00"
        android:layout_centerInParent="true"
        android:textSize="@dimen/timer_text_size"
        android:textStyle="bold"
        android:textColor="@color/black"/>
</RelativeLayout>